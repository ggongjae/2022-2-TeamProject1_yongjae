<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/sleeping_time_q"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text="소음이 들리지 않을 시,\n문자, 전화, 응급구조 서비스를\n받을 시간을 입력해주세요"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="문자전송"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="@id/layout_message_time"
            app:layout_constraintBottom_toTopOf="@id/layout_message_time"
            android:layout_marginBottom="5dp"/>
        <LinearLayout
            android:id="@+id/layout_message_time"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/light_gray"
            app:layout_constraintTop_toBottomOf="@id/sleeping_time_q"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_more_button"
            android:gravity="center">

            <EditText
                android:id="@+id/edit_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="2"
                android:padding="10dp"
                android:textSize="18dp"
                android:layout_marginHorizontal="10dp"
                android:background="@android:color/transparent"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전화연락"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="@id/layout_call_time"
            app:layout_constraintBottom_toTopOf="@id/layout_call_time"
            android:layout_marginBottom="5dp"/>
        <LinearLayout
            android:id="@+id/layout_call_time"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/light_gray"
            app:layout_constraintTop_toBottomOf="@id/layout_message_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_more_button"
            android:gravity="center">

            <EditText
                android:id="@+id/edit_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="5"
                android:padding="10dp"
                android:textSize="18dp"
                android:layout_marginHorizontal="10dp"
                android:background="@android:color/transparent"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="응급구조"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="@id/layout_sos_time"
            app:layout_constraintBottom_toTopOf="@id/layout_sos_time"
            android:layout_marginBottom="5dp"/>
        <LinearLayout
            android:id="@+id/layout_sos_time"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/light_gray"
            app:layout_constraintTop_toBottomOf="@id/layout_call_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_more_button"
            android:gravity="center">

            <EditText
                android:id="@+id/edit_sos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="8"
                android:padding="9dp"
                android:textSize="18dp"
                android:layout_marginHorizontal="10dp"
                android:background="@android:color/transparent"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/next_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/green_4"
            android:text="@string/next_level"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>