<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_next_btn"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_top_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#fa879a">

            <ImageView
                android:id="@+id/girl_hand"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/sand_clock"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/correct_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:padding="5dp"
                android:text="수정하실 정보를 입력해주세요"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/layout_top_image"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수면 시작 시간"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="@id/layout_elder_sleeping_start1"
                app:layout_constraintBottom_toTopOf="@id/layout_elder_sleeping_start1"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:id="@+id/layout_elder_sleeping_start1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/light_gray"
                app:layout_constraintTop_toBottomOf="@id/correct_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/layout_elder_sleeping_start2"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_more_button"
                android:gravity="center">

                <EditText
                    android:id="@+id/elder_start_hour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="시"
                    android:padding="10dp"
                    android:textSize="18dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@android:color/transparent"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_elder_sleeping_start2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/light_gray"
                app:layout_constraintStart_toEndOf="@id/layout_elder_sleeping_start1"
                app:layout_constraintTop_toTopOf="@id/layout_elder_sleeping_start1"
                app:layout_constraintBottom_toBottomOf="@id/layout_elder_sleeping_start1"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/round_more_button"
                android:gravity="center">

                <EditText
                    android:id="@+id/elder_start_minute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="분"
                    android:padding="10dp"
                    android:textSize="18dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@android:color/transparent"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수면 종료 시간"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="@id/layout_elder_sleeping_end1"
                app:layout_constraintBottom_toTopOf="@id/layout_elder_sleeping_end1"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:id="@+id/layout_elder_sleeping_end1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/light_gray"
                app:layout_constraintTop_toBottomOf="@id/layout_elder_sleeping_start1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/layout_elder_sleeping_end2"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_more_button"
                android:gravity="center">

                <EditText
                    android:id="@+id/elder_end_hour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="시"
                    android:padding="10dp"
                    android:textSize="18dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@android:color/transparent"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_elder_sleeping_end2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/light_gray"
                app:layout_constraintStart_toEndOf="@id/layout_elder_sleeping_end1"
                app:layout_constraintTop_toTopOf="@id/layout_elder_sleeping_end1"
                app:layout_constraintBottom_toBottomOf="@id/layout_elder_sleeping_end1"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_more_button"
                android:gravity="center">

                <EditText
                    android:id="@+id/elder_end_minute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="분"
                    android:padding="10dp"
                    android:textSize="18dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@android:color/transparent"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="문자전송"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="@id/layout_message_time"
                app:layout_constraintBottom_toTopOf="@id/layout_message_time"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:id="@+id/layout_message_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/light_gray"
                app:layout_constraintTop_toBottomOf="@id/layout_elder_sleeping_end1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_more_button"
                android:gravity="center">

                <EditText
                    android:id="@+id/elder_message_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="2"
                    android:padding="10dp"
                    android:textSize="18dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@android:color/transparent"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화연락"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="@id/layout_call_time"
                app:layout_constraintBottom_toTopOf="@id/layout_call_time"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:id="@+id/layout_call_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/light_gray"
                app:layout_constraintTop_toBottomOf="@id/layout_message_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_more_button"
                android:gravity="center">

                <EditText
                    android:id="@+id/elder_call_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="5"
                    android:padding="10dp"
                    android:textSize="18dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@android:color/transparent"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="응급구조"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="@id/layout_sos_time"
                app:layout_constraintBottom_toTopOf="@id/layout_sos_time"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:id="@+id/layout_sos_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/light_gray"
                app:layout_constraintTop_toBottomOf="@id/layout_call_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_more_button"
                android:gravity="center">

                <EditText
                    android:id="@+id/elder_sos_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="5"
                    android:padding="9dp"
                    android:textSize="18dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@android:color/transparent"/>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_next_btn"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/save_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/green_4"
            android:text="수정 완료"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>